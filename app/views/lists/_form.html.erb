<%= form_for(list) do |f| %>
  <% if list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>
      <ul>
      <% list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <div class="col-md-3">
        <%= f.label :name%>
      </div>
      <div class="col-md-9">
        <%= f.text_field :name, :id => "list_name", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-3">
        <%= f.label :color %>
      </div>
      <div class="col-md-9">
        <%= color_field(:list, :color, :class => "form-control")  %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-3">
        <%= f.label :is_public, 'Public link active' %>
      </div>
      <div class="col-md-9">
        <%= check_box(:list, :is_public, :class => "form-control js-switch")  %>
      </div>
    </div>
    <%= f.hidden_field :user_id, :value => list.user_id %>

    <div class="actions">
    <%= f.submit :class => "btn btn-success" %>
  </div>
<% end %>
